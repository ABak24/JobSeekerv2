<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_employer"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up as Employer:"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#8E49F1"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:src="@drawable/job_seeker"
        />




    <EditText
        android:background="#2A6200EE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/usernameEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="10pt"
        android:hint="Username"/>
    <EditText
        android:background="#2A6200EE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/passwordEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:hint="Password"
        android:inputType="textPassword"/>
    <Button
        android:background="@color/purple_500"
        android:id="@+id/signEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="10pt"
        android:text="SIGN UP"/>

</LinearLayout>