<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employer_login"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/job_seeker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Seeker"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#C91E88E5"/>


    <EditText
        android:id="@+id/emailEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="10pt"
        android:hint="Username"/>
    <EditText
        android:id="@+id/passwordEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:hint="Password"
        android:inputType="textPassword"/>
    <Button
        android:background="#E2571CE6"
        android:id="@+id/btn_loginEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="10pt"
        android:text="LOG IN"
        />



</LinearLayout>