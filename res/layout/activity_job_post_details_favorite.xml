<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobPostDetailsFavorite"
    android:background="#9FB3DD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/job_seeker" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PostDetailTitleFavorite"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="CNC Strojar"
                    android:textColor="#E2571CE6"
                    android:textSize="45dp"
                    android:textStyle="bold" />
                <ImageButton

                    android:id="@+id/favoriteButtonJobPostFavorite"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_full"
                    android:background="#9FB3DD"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="#E2571CE6"
                    android:id="@+id/PostDetailFirmNameFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="left"
                    android:text="Forma d.o.o."
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text=" - "
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="#E2571CE6"
                    android:id="@+id/PostDetailCategoryFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="left"
                    android:text="Građevinarstvo"
                    android:textSize="24dp"
                    android:textStyle="bold" />


            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home_work"/>

                <TextView
                    android:id="@+id/PostDetailLocationFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:text="Omiš"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"/>

                <TextView
                    android:autoLink="phone"
                    android:id="@+id/PostDetailPhoneFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"

                    android:text="+39563244214"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/email"/>

                <TextView
                    android:id="@+id/PostDetailEmailFavorite"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:text="posaohr@gmail.com"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#E2571CE6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Description:"
                    android:textSize="28dp" />

                <TextView

                    android:id="@+id/PostDetailDescriptionFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>


            </LinearLayout>


            <TextView
                android:textColor="#E2571CE6"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About employer:"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PostDetailAboutEmployerFavorite"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:text="Forma je kompanija koja se bavi obradom kamena
od 1997. godine. Trenutno broji 27 zaposlenih. Glavni ured smješten je u Zakučcu
kod Omiša. Planovi za budućnost su proširenje poslovanja, a samim time i jos zapošljavanja."
                />



        </LinearLayout>

    </LinearLayout>

</ScrollView>